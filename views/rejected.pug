html
  head
    style
      include ./style.css
    title= "Summary"
  a(href='/') Go to start
  h1 Client: #{clientName}
  p
    a(class='selected' href='/summary') Summary
    if records > 0
      div
        a(class='download' href='/download?filename=summary') Download
        input(class='blacklist' type='submit', value='Add to black list')
      table
        tr
          th Blacklist
          th Url
          th English
          th DR
          th TR
          th US Traffic
          th Write for us
          th Trend angle
        each x in xs
          tr
            td
              input(type='checkbox' id=x.domain name=x.domain)
            td  #{x.domain}
            td  #{x.english}
            td  #{x.dr}
            td  #{x.tr}
            td  #{x.us_tr}
            td  #{x.writeToUs}
            td  #{x.angle}
    else
      div No records
