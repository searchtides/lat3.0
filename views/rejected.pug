html
  head
    style
      include ./style.css
    style.
      body {
        background-color: #ffe5b4;
      }
    title= "Rejected"
  a(href='/') Go to start
  p
    a(href='/reports') Go to reports
  h1 Client: #{clientName}
  span Records: #{records}
  p
    each x in tabs
      a(class=x.className href='/' + x.link) #{x.name}
  form(action='/add_to_blacklist', method='POST' enctype="multipart/form-data")
    input(class='hidden' name='reportId' value=reportId)
    input(class='hidden' name='type' value='rejected')
    input(class='hidden' name='subtype' value=subtype)
    if records > 0
      div
        a(class='download' href='/download?type=' + type + '&subtype=' + subtype + '&reportId=' + reportId ) Download
        input(class='blacklist' type='submit', value='Add to black list')
      table
        tr
          th Blacklist
          th Url
          th English
          th DR
          th TR
          th US Traffic
          th Write for us
          th Trend angle
        each x in xs
          tr
            td
              input(type='checkbox' id=x.domain name=x.domain)
            td  #{x.domain}
            td  #{x.english}
            td  #{x.dr}
            td  #{x.tr}
            td  #{x.us_tr}
            td  #{x.writeToUs}
            td  #{x.angle}
    else
      div No records
